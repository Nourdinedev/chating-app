<link rel="stylesheet" href="CSS/sign.css">
</head>

<body>
   <div class="container" id="container">
      <div class="form-container sign-up-container">
         <form action="/sign-in" method="post">
            <h1>Create Account</h1>
            <input type="text" placeholder="Name" name="user[name]" required />
            <input type="email" placeholder="Email" name="user[email]" required />
            <input type="password" placeholder="Password" name="user[password]" required />
            <button>Sign Up</button>
         </form>
      </div>
      <div class="form-container sign-in-container">
         <form action="/sign-up" method="post">
            <h1>Sign in</h1>
            <input type="email" placeholder="Email" name="user[email]" required />
            <input type="password" placeholder="Password" name="user[password]" required />
            <a href="#">Forgot your password?</a>
            <button>Sign In</button>
         </form>
      </div>
      <div class="overlay-container">
         <div class="overlay">
            <div class="overlay-panel overlay-left">
               <h1>Welcome Back!</h1>
               <p>Please login with your personal info and start chating</p>
               <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
               <h1>Hello, Friend!</h1>
               <p>Enter your personal details to start chating</p>
               <button class="ghost" id="signUp">Sign Up</button>
            </div>
         </div>
      </div>
   </div>

   <script src="/js/sign.js"></script>